<?xml version='1.0' encoding='UTF-8'?>
<wizard id='mywizard'>
  
  <title>jack_capture wizard</title>
  <description>Configure a simple recording session.</description>
  <width>800</width>
  <height>600</height>
  
  <!-- PAGES -->
  <first-page id='First'>
    <title>Recording Jamulus session with jack_capture</title>
    <description>This wizard let you create a raysession that starts Jamulus server and clients + jack_capture.</description>
  </first-page>
  <page id='Global' section-name='global'>
    <title>Ray Session section</title>
    <field id='raysession_name' type='SessionNameCheckLineEdit'>
      <label>The RaySession filename</label>
      <input type="filename"/>
      <default value="My jack capture session"/>
    </field> 
    <field id='users' type='CheckLineEdit' >
      <label>The user names of the musician connected on this computer (each have a channel on the server)</label>
      <input type='regexp'><regexp>^\w+(,\w+)*$</regexp></input>
      <output split-seperator="," datamodel-id='userlist'/>
      <default value="user1_vocal,user2_guitar"/>
    </field>
    <field id='bool_jack_capture_connect' type='QCheckBox'>
      <label>Check if you want to record your Jamulus session using jack_capture</label>
      <default value="True"/>
    </field>
    <field id='bool_start_jamulus_server' type='QCheckBox'>
      <label>Start and connect to localhost Jamulus server (on this machine)</label>
      <default value="True"/>
    </field>
    <field id='audioformat' type='QComboBox'>
      <label>The output audio format</label>
      <input>
        <item id='mp3' label='MP3 format file'/>
        <item id='oga' label='OGG audio format file'/>
        <item id='wav' label='WAV format file'/>
      </input>
      <default value="mp3"/>
    </field>
  </page>
  <page id='Jamulus' section-name='jamulus'>
    <title>Jamulus users section</title>
    <field id='user' type='UsersListEdit'>
      <label>Set the input for each user</label>
      <input list-id="userlist" max-count='5' inputs="True" outputs='True'/>
      <output datamodel-id='userlist'/>
      <default>
        <item inputs='1->L' outputs='L->1 R->2'/>
        <item inputs='2->L'/>
        <item inputs='3->L'/>
        <item inputs='4->L'/>
        <item inputs='5->L'/>
      </default>
    </field>
  </page>
  <last-page id='Last'>
    <title>Validate</title>
    <description>...</description>
  </last-page>
</wizard>
